<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="luo.com.rxdemo.rxpermissions.RxPermissionsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_rx_permissions_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rx_Permissions_Request" />
        <Button
            android:id="@+id/bt_rx_permissions_ensure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rx_Permissions_Ensure"/>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
